<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragment_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_second_layer"
    android:orientation="vertical">

    <com.example.marveldemo.widgets.mainfragment.AppTitleView
        android:id="@+id/main_fragment_app_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.marveldemo.widgets.mainfragment.MySquadView
        android:id="@+id/main_fragment_my_squad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.marveldemo.widgets.mainfragment.CharactersView
        android:id="@+id/main_fragment_characters_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>